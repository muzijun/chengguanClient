<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="5dp"
    android:paddingTop="@dimen/item_search_padding"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/ll_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/tv_padding_value"
            android:paddingTop="@dimen/tv_padding_value"
            android:textColor="@color/colorWhite"
            android:text="桥梁123" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/tv_padding_value"
                android:text="结构类型:拱桥" />

            <TextView
                android:id="@id/tx_start_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/tv_padding_value"
                android:text="巡查周期:一级" />

            <TextView
                android:id="@id/tx_protect_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/tv_padding_value"
                android:text="责任主体:区本级" />

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/horizontal_line"
        android:layout_margin="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:text="地址:县山区"
        android:gravity="right"/>

</LinearLayout>