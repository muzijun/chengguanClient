<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_f7f9f9"
        android:orientation="vertical">

        <include layout="@layout/include_titlebar"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="27dp"
            android:background="@color/bg_line"/>


        <TextView
            android:id="@+id/tx_contactsheet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@mipmap/work"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arraw_right2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:text="工作联系单"
            android:textSize="@dimen/text_size_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/bg_line"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@color/colorWhite"
            android:drawableLeft="@mipmap/kaohe"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arraw_right2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:text="@string/item_assess"
            android:textSize="@dimen/text_size_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/bg_line"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="17dp"
            android:background="@color/bg_line"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@mipmap/tongzhi"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arraw_right2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:text="通知"
            android:textSize="@dimen/text_size_medium"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/bg_line"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@color/colorWhite"
            android:drawableLeft="@mipmap/userinfo"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arraw_right2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:text="我的信息"
            android:textSize="@dimen/text_size_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/bg_line"/>


        <TextView
            android:id="@+id/tx_contacts"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@color/colorWhite"
            android:drawableLeft="@mipmap/userlist"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arraw_right2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:text="通讯录"
            android:textSize="@dimen/text_size_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/bg_line"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="17dp"
            android:background="@color/bg_line"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@color/colorWhite"
            android:drawableLeft="@mipmap/wenti"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arraw_right2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:text="破损问题"
            android:textSize="@dimen/text_size_medium"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/bg_line"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="17dp"
            android:background="@color/bg_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/version_new"
                android:drawablePadding="20dp"
                android:drawableRight="@mipmap/arraw_right2"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:text="软件更新"
                android:textSize="@dimen/text_size_medium"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="70dp"
                android:src="@mipmap/state_new"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/bg_line"/>

    </LinearLayout>
</ScrollView>