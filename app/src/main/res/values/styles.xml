<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.4dp</item>
        <item name="android:background">@color/bg_line</item>
    </style>

    <style name="more_horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.4dp</item>
        <item name="android:background">@color/bg_line</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="LightSpinnerItem" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">@color/colorPrimaryHalf</item>
        <item name="rd_rippleAnimDuration">200</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="rd_delayClick">afterRelease</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="LightSpinner">
        <item name="rd_style">@style/Material.Drawable.Ripple.Wave</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_arrowAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="spn_arrowColor">@color/colorControlNormal</item>
        <item name="spn_labelEnable">false</item>
        <item name="spn_dividerHeight">2dp</item>
        <item name="spn_dividerPadding">0dp</item>
        <item name="spn_dividerAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowSize">4dp</item>
        <item name="spn_arrowPadding">8dp</item>
        <item name="spn_popupItemAnimation">@anim/abc_slide_in_bottom</item>
        <item name="spn_popupItemAnimOffset">120</item>

    </style>
    <!--启动透明-->
    <style name="Theme.AppStartLoadTranslucent" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- dialog背景变暗 -->
    <style name="dialog_dimenable" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 基础数据中的item  -->
    <style name="item_text_title_blue">
        <item name="android:textColor">@color/colorBule</item>
        <item name="android:textSize">@dimen/basedata_itme_title_text_size_large</item>
        <item name="android:layout_marginTop">@dimen/basedata_item_margin_top</item>
    </style>

    <style name="item_text_title_gray">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">@dimen/basedata_itme_title_text_size_large</item>
    </style>

    <style name="item_text_title_light_gray">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:layout_marginTop">@dimen/basedata_item_title_margin_top</item>
        <item name="android:textSize">@dimen/basedata_itme_title_text_size_medium</item>
    </style>

    <!-- 任务联系单 检查 -->
    <style name="check_task_textview">
        <item name="android:layout_marginBottom">@dimen/chek_task_textview_margin_top_bottom</item>
        <item name="android:layout_marginTop">@dimen/chek_task_textview_margin_top_bottom</item>
        <item name="android:textSize">@dimen/chek_task_textview_text_size_medium</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:layout_marginLeft">@dimen/chek_task_textview_margin_left</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="check_task_textview_bold">
        <item name="android:layout_marginBottom">@dimen/chek_task_textview_margin_top_bottom_large
        </item>
        <item name="android:layout_marginTop">@dimen/chek_task_textview_margin_top_bottom_large
        </item>
        <item name="android:textSize">@dimen/chek_task_textview_text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/chek_task_textview_margin_left</item>
        <item name="android:layout_marginRight">@dimen/chek_task_textview_margin_left</item>
    </style>

    <style name="check_task_textview_none_left">
        <item name="android:layout_marginBottom">@dimen/chek_task_textview_margin_top_bottom</item>
        <item name="android:layout_marginTop">@dimen/chek_task_textview_margin_top_bottom</item>
        <item name="android:textSize">@dimen/chek_task_textview_text_size_medium</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:layout_marginLeft">@dimen/chek_task_textview_margin_left_small</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
